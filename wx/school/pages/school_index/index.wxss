/* pages/school_index/index.wxss */
.index_clm{background:#ECECEC;padding-bottom:40rpx;}
.clm_child{width:110rpx;text-align: center;float:left;margin-left:60rpx;margin-top:40rpx;}
.clm_child image{width:110rpx;}
.clm_child text{display:block;font-size:34rpx;}
.min_class{padding:40rpx 25rpx;}
.title_class{color:#FE9700;border-left:15rpx solid #FE9700;padding-left:10rpx;font-weight:500;font-size:38rpx;}
.title_right{float:right;font-size:32rpx;color:#666;}
.class_clm{margin:20rpx;padding:20rpx 0;position:relative;}
.fm_img{width:200rpx;height:200rpx;display:block;float:left;}
.right_info{float:right;width:430rpx;}
.right_info text:nth-of-type(1){display:block;font-size:32rpx;font-weight:500;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.right_info text:nth-of-type(2){display:block;font-size:29rpx;color:#757575;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.right_info text:nth-of-type(3){display:block;font-size:29rpx;color:#757575;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.right_info rich-text{display:block;font-size:29rpx;color:#757575;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.class_number{position:absolute;right:0;bottom:20rpx;}
.class_number image{width:35rpx;display:block;float:left;margin-right:10rpx;}
.class_number text{font-size:30rpx;color:#579615;display:block;float:left;line-height: 35rpx;}