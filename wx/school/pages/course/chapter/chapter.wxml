<view class="page">
  <view class="page__hd">
    <text class="page__title">请选择章节</text>
    <text class="page__desc">选择器</text>
  </view>
  <view class="page__bd">
    <view class="section">
      <picker bindchange="bindPickerChange1" value="{{index1}}" range="{{objectArray1}}" range-key='name'>
        <view class="picker">
          请选择章：{{objectArray1[index1].name}}
        </view>
      </picker>
    </view>

    <view class="section">
      <picker bindchange="bindPickerChange2" value="{{index2}}" range="{{objectArray2}}" range-key='name'>
        <view class="picker">
          请选择节：{{objectArray2[index2].name}}
        </view>
      </picker>
    </view>

    <view class="section">
      <picker bindchange="bindPickerChange3" value="{{index3}}" range="{{objectArray3}}" range-key='name'>
        <view class="picker">
          请选择小节：{{objectArray3[index3].name}}
        </view>
      </picker>
    </view>
    <button bindtap="goOn" class="rule" data-url='/pages/course/preview/preview'>确定</button>
  </view>
  
</view>