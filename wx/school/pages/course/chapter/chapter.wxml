<view class="page">
  <view class="page__hd">
    <text class="page__title">{{courseName}}</text>
    <text class="page__desc">选择器</text>
  </view>
  <view class="page__bd">
    <view class="section">
      <picker bindchange="bindPickerChange1" value="{{index1}}" range="{{objectArray1}}" range-key='text'>
        <view class="picker">
          请选择章：{{objectArray1[index1].text}}
        </view>
      </picker>
    </view>

    <view class="section">
      <picker bindchange="bindPickerChange2" value="{{index2}}" range="{{objectArray2}}" range-key='text'>
        <view class="picker">
          请选择节：{{objectArray2[index2].text}}
        </view>
      </picker>
    </view>

    <view class="section">
      <picker bindchange="bindPickerChange3" value="{{index3}}" range="{{objectArray3}}" range-key='text'>
        <view class="picker">
          请选择小节：{{objectArray3[index3].text}}
        </view>
      </picker>
    </view>
    <button bindtap="navToPreview" class="rule">确定</button>
  </view>
  
</view>