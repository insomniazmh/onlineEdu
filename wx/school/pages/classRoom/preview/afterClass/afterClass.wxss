/* 头部 */
.room-warp{
  position: relative;
  width: 100%;
}
.room-warp image{
  width: 100%;
  height: 100%;
}
.room-warp .headImg{
  position: relative;
  height: 400rpx;
}
.room-warp .beforeList{
  position: relative;
  height: 115rpx;
  background:ghostwhite;
}
.room-warp van-row van-col{
  text-align: center;
}
.room-warp van-row van-col .col-8{
  margin-right: 20rpx;
  padding: 20rpx 50rpx;
  line-height: 2rem;
}
.room-warp van-row van-col navigator{
    color: #c28b39;
    font-weight: 600;
    font-size: 35rpx;
}
.room-warp van-row van-col .classBottom{
  border-bottom: 3px solid #c28b39;
  padding-bottom: 8rpx;
}
.room-warp .know{
  margin-left: 20rpx;
  font-weight: 600;
  border-left: 10px solid #c28b39;
  padding-left: 15rpx;
  margin-top:50rpx;
  font-size: 36rpx;
}
.room-warp .right-title{
  font-size: 24rpx;
  color: #7f7f7f;
  margin-left: 240rpx;
  font-weight: 0;
}
.room-warp .know-list{
  padding: 40rpx 100rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.room-warp .know-list text{
  color: #dcdcdc;
  display: block;
  margin-top: -1rpx;
  margin-right: 20rpx;
}
.room-warp .know-list .know-1{
  border-bottom: 1px solid #dcdcdc;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
}
.room-warp .know-list .know-2{
  display: flex;
}
.room-warp .know-list .know-2 text{
  margin-top: -3rpx;
}
.room-warp .cut-off{
  width: 100%;
  height: 25rpx;
  background: #ddd;
}
.room-warp .know-swiper{
  padding: 40rpx 40rpx;
}
.room-warp swiper{
  border-bottom: 1px solid #0aa1de;
  padding-bottom: 50rpx;
}
.room-warp .data-list{
  padding: 30rpx 80rpx;
}
.room-warp .data-list .data-item{
  margin-bottom: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
}
.room-warp .data-list .data-item van-icon{
  margin: 6rpx 15rpx;
}

/* 课后 */
.room-warp .know-card{
  padding: 65rpx 60rpx 30rpx;
  display: flex;
}
.room-warp .know-card .card-img{
  width: 90rpx;
  height: 90rpx;
}
.room-warp .know-card .card-img image{
  border-radius: 50%;
}
.room-warp .know-card .card-title{
  margin-left: 20rpx;
  font-size: 22rpx;
  color: #333333;
}
.room-warp .know-card .title-name{
  color: #c28b39
} 
.room-warp .konw-contet{
  padding: 0rpx 60rpx;
  font-size: 30rpx;
}
.room-warp .know-btn{
  text-align: center;
  padding: 40rpx 50rpx;
  color: #c28b39;
  display: flex;
}
.room-warp .know-btn navigator{
  border: 1px solid #c28b39;
  border-radius: 15rpx;
  width: 26%;
  height: 45rpx;
  line-height: 2;
  font-size: 24rpx;
}
/* 评价 */
.right{
  margin-left: 100rpx;
}
.right .star{
  float: left;
}
.star image{
  width: 35rpx;
  height: 35rpx;
}
.know-warp{
  padding: 0 0 0 55rpx;
}
/* 作业 */
.room-warp .data-list .data-item{
  margin-bottom: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
}
.room-warp .data-list .data-item image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}
.room-warp .data-list .self-title{
  /* font-size: 35rpx;
  font-weight: 600; */
  padding: 25rpx 40rpx 5rpx;
  display: block;
}
.room-warp .data-list .self-item{
  padding: 50rpx 35rpx 20rpx;
}
.room-warp .data-list .self-item navigator{
    border: 1px solid #afaeae;
    color: #afaeae;
    border-radius: 15rpx;
    padding: 5rpx 35rpx;
    margin-bottom: 35rpx;
}
.room-warp .data-list .self-item navigator text{
  color: #cac7c7;
  margin-left: 35rpx;
}
.room-warp .data-list .task-item text{
  font-size: 28rpx;
}
.room-warp .data-list .self-item .self-img{
  width: 140rpx;
  height: 100rpx;
}
.room-warp .data-list .self-item .mgr{
  margin-right: 150rpx;
}
.room-warp .data-list .img-item{
  display: flex;
  padding: 50rpx 95rpx 20rpx;
}
.room-warp .data-list .task-textarea{
  padding:30rpx 10rpx 5rpx;
}
.room-warp .data-list .task-textarea textarea{
  border: 1px solid #868686;
  width: auto;
  padding: 20rpx 20rpx 20rpx;
  border-radius: 10rpx;
}
.room-warp .data-list .task-btn{
  padding: 15rpx 80rpx 5rpx;
  color: #fff;
}
.room-warp .data-list .task-btn button{
  background: #0aa1de;
  color: #fff;
  height: 65rpx;
  font-size: 33rpx;
  line-height: 2;
}